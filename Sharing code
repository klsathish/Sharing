[HttpPost("InsertUserActivity")]
public async Task<IActionResult> InsertUserActivity([FromBody] InsertUserActivity InsertUserActivity)
{
    var claims = HttpContext.User.Identity as ClaimsIdentity;
    var claimDomainLoginID = claims?.Claims.FirstOrDefault(claim => claim.Type == "domainLoginID")?.Value;
    InsertUserActivity.CreatedBy = claimDomainLoginID;
    await _iActivityMonitoringService.InsertUserActivity(InsertUserActivity);
    return StatusCode(StatusCodes.Status200OK, "Activity tracked");
}


[Fact]
public async Task InsertUserActivityTest()
{

    var expectedLoginId = "testuser";
    var claim = new List<Claim> { new Claim("domainLoginID", expectedLoginId) };
    var identity = new ClaimsIdentity(claim, "TesrAuthType");
    _activityMonitoringController.ControllerContext = new ControllerContext
    {
        HttpContext = new DefaultHttpContext { User = new ClaimsPrincipal(identity) }
    };

    var result = await _activityMonitoringController.InsertUserActivity(It.IsAny<InsertUserActivity>());

   
    var objectResult = Assert.IsType<ObjectResult>(result);
    //Assert.Equal(result..StatusCode, objectResult.StatusCode);
    Assert.NotNull(result);
}
