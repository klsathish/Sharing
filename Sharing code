 [HttpGet("GetUserDetails")]
 public async Task<IActionResult> GetUserDetails()
 {
     var claims = HttpContext.User.Identity as ClaimsIdentity;
     var claimDomainLoginID = claims?.Claims.FirstOrDefault(claim => claim.Type == "domainLoginID")?.Value;
     UserModel userAuthenticateModel = new UserModel();
     if (claimDomainLoginID != null)
     {
         userAuthenticateModel = await _accountService.GetUserbyLoginIdAsync(claimDomainLoginID);
         return StatusCode(userAuthenticateModel.StatusCode, userAuthenticateModel);
     }
     else
     {
         userAuthenticateModel.StatusMessage = "Username not found from system";
         userAuthenticateModel.StatusCode = 404;
         return StatusCode(userAuthenticateModel.StatusCode, userAuthenticateModel);
     }
 }

 [Fact]
 public async Task GetUserDetails_ReturnsUserDetails_WhenClaimDomainLoginIDExists()
 {

     var claim = new ClaimsIdentity();
     _accountController.ControllerContext = new ControllerContext
     {
         HttpContext = new DefaultHttpContext { User = new ClaimsPrincipal(claim) }
     };
     var userModel = new UserModel { StatusCode = 200, };
     _accountServiceMock.Setup(s => s.GetUserbyLoginIdAsync(It.IsAny<string>())).ReturnsAsync(userModel);

     
     var result = await _accountController.GetUserDetails();

     
     var objectResult = Assert.IsType<ObjectResult>(result);
     Assert.Equal(userModel.StatusCode, objectResult.StatusCode);
     Assert.Equal(userModel, objectResult.Value);
     Assert.NotNull(result);
 }
